<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<StackPane prefHeight="480.0" prefWidth="531.0" stylesheets="@presentation/bootstrapfx.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.jorjai.bummer4.presentation.WaifuController">
   <children>
      <BorderPane styleClass="panel-primary">
         <top>
            <VBox alignment="CENTER" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="WAIFU.IM CLIENT" textAlignment="CENTER">
                     <styleClass>
                        <String fx:value="h1" />
                        <String fx:value="text-primary" />
                     </styleClass>
                  </Text>
                  <HBox alignment="CENTER" spacing="40.0">
                     <children>
                        <CheckBox fx:id="nsfwCheckBox" alignment="CENTER" mnemonicParsing="false" text="NSFW">
                           <styleClass>
                              <String fx:value="check" />
                              <String fx:value="check-menu-item" />
                           </styleClass>
                        </CheckBox>
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Category:" />
                              <ComboBox fx:id="categoryComboBox" prefWidth="150.0">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-default" />
                                    <String fx:value="btn-xs" />
                                 </styleClass>
                              </ComboBox>
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </HBox>
                  <Button fx:id="searchButton" alignment="CENTER" mnemonicParsing="false" text="Find your next waifu!" textAlignment="CENTER">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </VBox>
         </top>
         <center>
            <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</StackPane>
